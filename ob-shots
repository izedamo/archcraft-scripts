#!/usr/bin/env bash

## Openbox screenshot menu

style=`cat $HOME/.config/dunst/sid`
file='Screenshot_%Y-%m-%d-%I-%M-%S_$wx$h.png'

# Lib
if ! . "/usr/lib/archcraft/common/ac-include.cfg" 2>/dev/null; then
    echo $"Error: Failed to source /usr/lib/archcraft/common/ac-include.cfg" >&2 ; exit 1
fi

# notify
notify_user () {
	if [[ "$style" == "Light" ]]; then
		dunstify -u low --replace=699 -i /usr/share/icons/Archcraft/actions/24/view-preview.svg "Saved in ~/Pictures."
	else
		dunstify -u low --replace=699 -i /usr/share/icons/Archcraft-Dark/actions/24/view-preview.svg "Saved in ~/Pictures."
	fi
}

# countdown
countdown () {
	for sec in `seq $1 -1 1`; do
		if [[ "$style" == "Light" ]]; then
			dunstify -t 1000 --replace=699 -i /usr/share/icons/Archcraft/actions/24/chronometer.svg "Taking shot in : $sec"
			sleep 1
		else
			dunstify -t 1000 --replace=699 -i /usr/share/icons/Archcraft-Dark/actions/24/chronometer.svg "Taking shot in : $sec"
			sleep 1
		fi
	done
}

# take shots
shotnow () {
	scrot "$file" -e 'mv $f ~/Pictures ; viewnior ~/Pictures/$f'
	notify_user
}

shot5 () {
	countdown '5'
	sleep 1 && scrot "$file" -e 'mv $f ~/Pictures ; viewnior ~/Pictures/$f'
	notify_user
}

shot10 () {
	countdown '10'
	sleep 1 && scrot "$file" -e 'mv $f ~/Pictures ; viewnior ~/Pictures/$f'
	notify_user
}

shotwin () {
	scrot -u "$file" -e 'mv $f ~/Pictures ; viewnior ~/Pictures/$f'
	notify_user
}

shotarea () {
	scrot -s "$file" -e 'mv $f ~/Pictures ; viewnior ~/Pictures/$f'
	notify_user
}

if [[ "$1" == "--now" ]]; then
	shotnow
elif [[ "$1" == "--in5" ]]; then
	shot5
elif [[ "$1" == "--in10" ]]; then
	shot10
elif [[ "$1" == "--win" ]]; then
	shotwin
elif [[ "$1" == "--area" ]]; then
	shotarea
else
    menuStart
        menuItem 'Screenshot Now' "$0 --now"
        menuItem 'Screenshot In 5s' "$0 --in5"
        menuItem 'Screenshot In 10s' "$0 --in10"
        menuItem 'Screenshot Area' "$0 --area"
        menuItem 'Screenshot Windows' "$0 --win"
    menuEnd
fi

exit 0
